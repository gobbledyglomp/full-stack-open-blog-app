{
  "name": "bloglist",
  "version": "0.1.0",
  "description": "Blog list application",
  "license": "CC-BY-NC-SA-3.0",
  "author": "gobbledyglomp",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node index.js",
    "dev": "cross-env NODE_ENV=development node --watch --inspect index.js",
    "test": "cross-env NODE_ENV=test node --test --test-concurrency=1 test/*.test.js",
    "start:test": "cross-env NODE_ENV=test node --watch index.js",
    "build:ui": "rm -rf dist && cd ../frontend && rm -rf dist && npm run build && cp -r dist ../backend",
    "deploy:full": "npm run build:ui && cd .. && git add . && git commit -m \"Frontend build (automatic)\" && git push"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mongoose": "^8.19.1",
    "morgan": "^1.10.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@stylistic/eslint-plugin": "^5.5.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "prettier": "^3.7.3",
    "supertest": "^7.1.4"
  }
}
